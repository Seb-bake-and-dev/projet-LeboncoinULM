{% extends 'base.html.twig' %}

{% block content %}
    <div class="container pt-5">
    <h5 class="card-title col-7 mt-5"> Voir les messages</h5>
    <h1>FMessage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ f_message.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ f_message.date ? f_message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ f_message.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('f_message_index') }}">back to list</a>

    <a href="{{ path('f_message_edit', {'id': f_message.id}) }}">edit</a>

    {{ include('f_message/_delete_form.html.twig') }}
{% endblock %}