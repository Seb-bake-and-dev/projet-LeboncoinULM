{% extends 'base.html.twig' %}

{% block title %}FTopics{% endblock %}

{% block body %}
    <div class="container pt-5">

    <h1>FTopics</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ f_topic.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ f_topic.name }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ f_topic.subject }}</td>
            </tr>
            <tr>
                <th>Date_post</th>
                <td>{{ f_topic.datePost ? f_topic.datePost|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('f_topics_index') }}">back to list</a>

    <a href="{{ path('f_topics_edit', {'id': f_topic.id}) }}">edit</a>

    {{ include('f_topics/_delete_form.html.twig') }}
    </div>
{% endblock %}