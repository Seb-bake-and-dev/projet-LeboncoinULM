{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <img class="img-responsive w-100 text-center"
             src="{{ asset('images/products/' ~ announce.picture) }}"
             alt="{{ announce.picture }}">

        <hr>
        <h5 class="card-title text-center">{{ announce.marque }} - {{ announce.model }} - {{ announce.price }}€</h5>
        <hr>
        <p><strong>-> {{ announce.state.state }}</strong> / Posté le: {{ announce.DatePost.date|date("m/d/Y") }}</p>
        <p class="mb-5">Description: {{ announce.description|nl2br }}</p>
        <div class="pb-5">
        <a href="{{ path('announce_pendulaires') }}" class="btn btn-dark float-left"><i class="fas fa-chevron-left"></i> Retour</a>

        <a href="{{ path('announce_pendulaires') }}" class="btn btn-primary float-right ml-2"><i class="far fa-heart"></i> Mettre en
            favoris</a>

        <a href="{{ path('contact', {'id': announce.id}) }}" class="btn btn-primary float-right"><i class="far fa-envelope"></i>
            Contacter le vendeur</a>

        </div>
    </div>
{% endblock %}