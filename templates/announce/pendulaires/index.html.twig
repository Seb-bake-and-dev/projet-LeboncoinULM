{% extends 'base.html.twig' %}

{% block content %}
    <div class="container pt-5">
        <div class="row">
            <div class="col-4 mt-1">
                <a href="{{ path('announce_pendulaires') }}" role="button" class="btn btn-primary">Trier par prix</a>
                <a href="{{ path('announce_pendulaires') }}" role="button" class="btn btn-primary">Trier par date</a>
            </div>
            <div class="col-6">
                {{ form_start(form) }}
                {{ form_row(form.search) }}
            </div>
            <div class="col-2">
            {{ form_row(form.Rechercher) }}
            {{ form_end(form) }}
            </div>
        </div>
        <hr class="mb-4">
        <ul class="cards mt-3">
            {% for announce in announces %}
                <li class="cards_item ">
                    <div class="card">
                        <div class="card_image">
                            <img src="{{ asset('images/products/' ~ announce.picture) }}" class=" img-announce">
                        </div>
                        <div class="card_content">
                            <h2 class="card_heading">{{ announce.model }}</h2>
                            <p>{{ announce.price }} â‚¬ - {{ announce.DatePost.date|date("m/d/Y") }}</p>
                            <a href="{{ path('announce_show', {'id': announce.id}) }}" class="card_button">Voir l'annonce</a>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        <div class="navigation">
            {{ knp_pagination_render(announces) }}
        </div>

    </div>
{% endblock %}

