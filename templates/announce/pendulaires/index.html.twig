{% extends 'base.html.twig' %}

{% block title %}Announce index{% endblock %}

{% block body %}
    <div class="container pt-5">
    <div class="card-columns justify-content-center">
        {% for announce in announces %}
            <div class="card mx-auto" style="width: 18rem;">
                <img class="card-img-top" src="{{ asset('images/products/' ~ announce.picture) }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Card title</h5>
                    <p class="card-text">
                        {{ announce.description|length > 50 ? announce.description|slice(0, 50) ~ '...' : announce.description }}</p>                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}