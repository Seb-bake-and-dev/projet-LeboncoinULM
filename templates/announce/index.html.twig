{% extends 'base.html.twig' %}

{% block content %}
    <h1>Announce index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Marque</th>
                <th>Model</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for announce in announces %}
            <tr>
                <td>{{ announce.id }}</td>
                <td>{{ announce.Marque }}</td>
                <td>{{ announce.Model }}</td>
                <td>{{ announce.Description }}</td>

                <img class="img-responsive w-25"
                     src="{{ asset('images/products/' ~ announce.picture) }}"
                     alt="{{ announce.picture }}">
                 <td>
                    <a href="{{ path('announce_show', {'id': announce.id}) }}">show</a>
                    <a href="{{ path('announce_edit', {'id': announce.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('announce_new') }}">Create new</a>
{% endblock %}